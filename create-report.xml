<project basedir="." default="create-report" name="Create Report">

    <target name="create-report">
        <echo message="-----------------------------"/>
        <echo message="Creating jUnit reports, please wait"/>
        <echo message="-----------------------------"/>
        <junitreport todir="target/junit/data">
            <fileset dir="target/junit/data">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="target/junit/html">
                <classpath>
                    <fileset dir="/Users/aretter/code/exist-git/lib/endorsed">
                        <include name="xalan*.jar"/>
                        <include name="xml-apis*.jar"/>
                        <include name="xercesImpl*.jar"/>
                        <include name="serializer*.jar"/>
                    </fileset>
                </classpath>
                <factory name="org.apache.xalan.processor.TransformerFactoryImpl"/>
            </report>
        </junitreport>
    </target>

</project>
